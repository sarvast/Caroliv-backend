{
    "name": "caloriv-backend",
    "version": "1.0.0",
    "author": "Sarthak",
    "description": "Caloriv Backend with AI and Payments",
    "main": "dist/src/server.js",
    "scripts": {
        "start": "node dist/src/server.js",
        "dev": "nodemon --exec ts-node src/server.ts",
        "build": "tsc",
        "migrate": "node migrate.js",
        "lint": "tsc --noEmit",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "migrate:up": "node scripts/migrate.js up",
        "migrate:down": "node scripts/migrate.js down",
        "migrate:create": "node scripts/migrate.js create",
        "migrate:status": "node scripts/migrate.js status"
    },
    "dependencies": {
        "@google/generative-ai": "^0.1.3",
        "@sentry/node": "^10.32.1",
        "@sentry/profiling-node": "^10.32.1",
        "bcryptjs": "^2.4.3",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^7.0.11",
        "razorpay": "^2.9.2",
        "sqlite3": "^5.1.7",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.10.6",
        "@types/nodemailer": "^7.0.4",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts",
            "!src/**/__tests__/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 50,
                "lines": 50,
                "statements": 50
            }
        }
    }
}
